#!/bin/bash

# 获取当前日期
if [[ -n $1 ]]; then
    current_date=$1
else
    current_date=$(date +'%m%d')
fi

# 去掉前导零
month=$(echo "${current_date:0:2}" | sed 's/^0*//')
day=$(echo "${current_date:2:2}" | sed 's/^0*//')

# 增加一天
day=$((day + 1))

# 处理月末情况
case $month in
    1|3|5|7|8|10|12)  # 31天的月份
        if [[ $day -gt 31 ]]; then
            day=1
            month=$((month + 1))
        fi
        ;;
    4|6|9|11)  # 30天的月份
        if [[ $day -gt 30 ]]; then
            day=1
            month=$((month + 1))
        fi
        ;;
    2)  # 2月（不考虑闰年）
        if [[ $day -gt 28 ]]; then
            day=1
            month=$((month + 1))
        fi
        ;;
esac

# 处理月份进位
if [[ $month -gt 12 ]]; then
    month=1
fi

# 格式化输出日期
formatted_month=$(printf "%02d" $month)
formatted_day=$(printf "%02d" $day)
next_date="${formatted_month}${formatted_day}"

echo "$next_date"
